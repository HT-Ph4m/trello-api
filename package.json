{
  "name": "trello_api",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": "18.16.0"
  },
  "scripts": {
    "lint": "bunx eslint src --ext js --report-unused-disable-directives --max-warnings 0",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "bunx babel ./src -d ./build/src",
    "build": "bun run clean && bun run build-babel",
    "production": "bun run build && bun ./build/src/server.js",
    "dev": "bunx babel-node ./src/server.js --watch --no-warnings"
  },
  "dependencies": {
    "@babel/runtime": "^7.22.10",
    "async-exit-hook": "^2.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "mongodb": "6.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/eslint-parser": "^7.22.10",
    "@babel/node": "^7.26.0",
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/preset-env": "^7.26.0",
    "@types/bun": "latest",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.47.0"
  },
  "trustedDependencies": [
    "core-js"
  ]
}
